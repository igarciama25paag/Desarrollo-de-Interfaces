<Window x:Class="AtazaKudeatzailea.AtazaBerriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtazaKudeatzailea"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="AtazaBerriaDialog" Width="400" Height="250">

    <Window.Resources>
        <ObjectDataProvider x:Key="LehentasunMailak" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:LehentasunMaila"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <StackPanel>
            
            <TextBlock Text="Ataza berria" TextAlignment="Center" FontSize="20" FontWeight="DemiBold"/>

            <StackPanel Orientation="Horizontal" Margin="10,10,80,10" HorizontalAlignment="Right">
                <TextBlock Text="Izenburua :" Margin="0,0,20,0"/>
                <TextBox x:Name="izenburua" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,80,10" HorizontalAlignment="Right">
                <TextBlock Text="Lehentasuna :" Margin="0,0,20,0"/>
                <ComboBox x:Name="lehentasuna" Width="100" ItemsSource="{Binding Source={StaticResource LehentasunMailak}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,80,10" HorizontalAlignment="Right">
                <TextBlock Text="Muga-eguna (ee/hh/uuuu) :" Margin="0,0,20,0"/>
                <TextBox x:Name="mugaEguna" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Click="sortu" Content="Sortu" Width="60" Margin="10"/>
                <Button Click="itxi" Content="Itxi" Width="60" Margin="10"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
