<Window x:Class="LagunLista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LagunLista"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Lagun Lista" Height="470" Width="320">
    <Grid>
        <GroupBox Header="Nire Lagunak" Margin="25,21,150,164">
            <ListBox x:Name="lagunLista" Height="200" Margin="10,0,10,0" SelectionChanged="lagunBatAukeratu"/>
        </GroupBox>

        <GroupBox Header="Autatutako Laguna" Margin="25,275,150,94">
            <TextBox x:Name="autatutakoLaguna" IsEnabled="False" Height="20"/>
        </GroupBox>

        <GroupBox Header="Lagun Berria" Margin="25,345,150,24">
            <TextBox x:Name="lagunBerria" Height="20"/>
        </GroupBox>

        <Button Click="gehitu" Content="Gehitu" HorizontalAlignment="Left" Margin="170,31,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Click="ezabatu" Content="Ezabatu" HorizontalAlignment="Left" Margin="170,81,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Click="listaEzabatu" Content="Lista Ezabatu" HorizontalAlignment="Left" Margin="170,131,0,0" VerticalAlignment="Top" Width="100" Height="30"/>

        <Button Click="itxi" Content="Itxi" HorizontalAlignment="Left" Margin="170,367,0,0" VerticalAlignment="Top" Width="100" Height="30"/>

    </Grid>
</Window>
