<Window x:Class="AldagaiOrokorrak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AldagaiOrokorrak"
        mc:Ignorable="d"
        Title="Aldagai Orokorrak" Height="280" Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="50,40,0,0" TextWrapping="Wrap" Text="Izena :" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,80,0,0" TextWrapping="Wrap" Text="1. Abizena :" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,120,0,0" TextWrapping="Wrap" Text="2. Abizena :" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,160,0,0" TextWrapping="Wrap" Text="DNI :" VerticalAlignment="Top"/>
        
        <TextBox x:Name="izena" HorizontalAlignment="Left" Margin="150,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="abizena1" HorizontalAlignment="Left" Margin="150,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="abizena2" HorizontalAlignment="Left" Margin="150,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="dni" HorizontalAlignment="Left" Margin="150,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        <Button Click="sartu" Content="Sartu" HorizontalAlignment="Left" Margin="50,200,0,0" VerticalAlignment="Top" Width="50"/>
        <Button Click="kargatuEtaIkusi" Content="kargatu eta Ikusi" HorizontalAlignment="Left" Margin="110,200,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="itxi" Content="Itxi" HorizontalAlignment="Left" Margin="240,200,0,0" VerticalAlignment="Top" Width="50"/>

    </Grid>
</Window>
