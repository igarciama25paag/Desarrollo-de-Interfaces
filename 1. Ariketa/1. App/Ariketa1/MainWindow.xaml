<Window x:Class="Ariketa1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300
        ">
    <Grid x:Name="grid">
        <TextBlock HorizontalAlignment="Left" Margin="37,60,0,0" TextWrapping="Wrap" Text="Primer Número" VerticalAlignment="Top" Background="DarkRed" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" Foreground="White" Padding="5px"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,105,0,0" TextWrapping="Wrap" Text="Segundo Número" VerticalAlignment="Top" Background="DarkRed" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" Foreground="White" Padding="5px"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,150,0,0" TextWrapping="Wrap" Text="Tercer Número" VerticalAlignment="Top" Background="DarkRed" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" Foreground="White" Padding="5px"/>
        <TextBlock HorizontalAlignment="Left" Margin="39,197,0,0" TextWrapping="Wrap" Text="Cuarto Número" VerticalAlignment="Top" Background="DarkRed" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" Foreground="White" Padding="5px"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,257,0,0" TextWrapping="Wrap" Text="Resultado" VerticalAlignment="Top" Background="DarkBlue" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" Foreground="White" Padding="5px"/>
        <TextBlock x:Name="res" HorizontalAlignment="Left" Margin="150,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="LightGray"/>

        <TextBox x:Name="n1" HorizontalAlignment="Left" Margin="150,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="n2" HorizontalAlignment="Left" Margin="150,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="n3" HorizontalAlignment="Left" Margin="150,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="n4" HorizontalAlignment="Left" Margin="150,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>

        <Button Content="Operar" HorizontalAlignment="Left" Margin="48,361,0,0" VerticalAlignment="Top" Click="BTN_Operar" Width="50"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="128,361,0,0" VerticalAlignment="Top" Click="BTN_Limpiar" Width="50"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="206,361,0,0" VerticalAlignment="Top" Click="BTN_Salir" Width="49"/>

    </Grid>
</Window>
