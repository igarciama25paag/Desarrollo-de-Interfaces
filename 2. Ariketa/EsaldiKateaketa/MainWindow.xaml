<Window x:Class="EsaldiKateaketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsaldiKateaketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        
        <TextBox x:Name="esaldia" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>

        <Button x:Name="b1" Click="e1" Content="Esaldi 1" HorizontalAlignment="Left" Margin="86,82,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="b2" Click="e2" IsEnabled="False" Content="Esaldi 2" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="b3" Click="e3" IsEnabled="False" Content="Esaldi 3" HorizontalAlignment="Left" Margin="254,82,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="b4" Click="e4" IsEnabled="False" Content="Esaldi 4" HorizontalAlignment="Left" Margin="86,117,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="b5" Click="e5" IsEnabled="False" Content="Esaldi 5" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="bbatu" Click="batu" IsEnabled="False" Content="Batu" HorizontalAlignment="Left" Margin="254,117,0,0" VerticalAlignment="Top" Width="60"/>

        <Button Click="garbitu" Content="Garbitu" HorizontalAlignment="Center" Margin="0,155,0,0" VerticalAlignment="Top" Width="228"/>
        <Button Click="itxi" Content="Itxi" HorizontalAlignment="Center" Margin="0,186,0,0" VerticalAlignment="Top" Width="228"/>

    </Grid>
</Window>
