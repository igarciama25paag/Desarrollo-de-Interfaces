<Window x:Class="IntroTekla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroTekla"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,39,0,0" TextWrapping="Wrap" Text="Idatzi textu bat" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>

        <TextBox x:Name="t1" HorizontalAlignment="Center" Margin="0,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="enter1"/>
        <TextBox x:Name="t2" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" KeyDown="enter2"/>
        <TextBox x:Name="t3" HorizontalAlignment="Center" Margin="0,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="enter3"/>

        <Button Click="garbitu" Content="Garbitu" HorizontalAlignment="Center" Margin="-70,210,0,0" VerticalAlignment="Top" Width="60px"/>
        <Button Click="itxi" Content="Itxi" HorizontalAlignment="Center" Margin="70,210,0,0" VerticalAlignment="Top" Width="60px"/>

    </Grid>
</Window>
