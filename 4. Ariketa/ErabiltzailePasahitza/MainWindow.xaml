<Window x:Class="ErabiltzailePasahitza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErabiltzailePasahitza"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="46,43,0,0" TextWrapping="Wrap" Text="Erabiltzailea:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="60,108,0,0" TextWrapping="Wrap" Text="Pasahitza:" VerticalAlignment="Top"/>

        <TextBox x:Name="user" HorizontalAlignment="Left" Margin="130,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pass" HorizontalAlignment="Left" Margin="130,108,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Click="sartu" Content="Sartu" HorizontalAlignment="Left" Margin="46,179,0,0" VerticalAlignment="Top" Padding="10,0"/>
        <Button Click="garbitu" Content="Garbitu" HorizontalAlignment="Center" Margin="0,179,0,0" VerticalAlignment="Top" Padding="5,0"/>
        <Button Click="itxi" Content="Itxi" HorizontalAlignment="Left" Margin="202,179,0,0" VerticalAlignment="Top" Padding="15,0"/>
        <TextBlock x:Name="mezua" HorizontalAlignment="Center" Margin="0,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
